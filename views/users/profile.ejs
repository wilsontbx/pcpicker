<%- include('../partials/header'); %>
<div class="row" id="profile">
    <div class="post col">
        <h1>Profile</h1>
        <i class='fas fa-user-circle' style='font-size:90px'></i>
        <p><%='Username: ' +info.username  %> </p>
        <p><%='First name: ' +info.first_name  %> </p>
        <p><%='Last Name: ' +info.last_name  %> </p>
        <p class="time"><%='Created at: '+info.updated_at%> </p>
    </div>
    <div class="post col">
        <h1>Post</h1>
        <% post.forEach(element => {%>
        <p> <a href="/collection/<%=element._id%>"><%=element.title%></a></p>
        <p class="time"><%='Created at: '+element.updated_at%> </p>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer'); %>